{% extends 'base.html.twig' %}

{% block title %}Dashboard - Mongoo{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Restaurants</h5>
                            <h2 class="mb-0">{{ restaurant_count }}</h2>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-store fa-3x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_restaurant_index') }}" class="btn btn-sm btn-outline-primary mt-3">Voir les restaurants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Employés actifs</h5>
                            <h2 class="mb-0">{{ active_employee_count }}</h2>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-user-check fa-3x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_employee_index') }}" class="btn btn-sm btn-outline-primary mt-3">Voir les employés</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Employés inactifs</h5>
                            <h2 class="mb-0">{{ inactive_employee_count }}</h2>
                        </div>
                        <div class="text-secondary">
                            <i class="fas fa-user-times fa-3x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_employee_index') }}" class="btn btn-sm btn-outline-primary mt-3">Voir les employés</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statistiques par restaurant</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Restaurant</th>
                                    <th>Employés actifs</th>
                                    <th>Employés inactifs</th>
                                    <th>Total employés</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stat in restaurant_stats %}
                                    <tr>
                                        <td>{{ stat.name }}</td>
                                        <td><span class="badge bg-success">{{ stat.activeEmployees }}</span></td>
                                        <td><span class="badge bg-secondary">{{ stat.inactiveEmployees }}</span></td>
                                        <td>{{ stat.totalEmployees }}</td>
                                        <td>
                                            <a href="{{ path('app_employee_index', {'restaurant_id': stat.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Voir les employés
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
