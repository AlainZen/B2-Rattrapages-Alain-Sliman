{% extends 'base.html.twig' %}

{% block title %}Détails de l'employé {{ employee.name }}{% endblock %}

{% block body %}
<h1>Détails de l'employé</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>{{ employee.id }}</td>
    </tr>
    <tr>
        <th>Nom</th>
        <td>{{ employee.name }}</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>{{ employee.email }}</td>
    </tr>
    <tr>
        <th>Actif</th>
        <td>{{ employee.active ? 'Oui' : 'Non' }}</td>
    </tr>
    <tr>
        <th>Restaurant</th>
        <td>{{ employee.restaurant.name }}</td>
    </tr>
    <tr>
        <th>Créé le</th>
        <td>{{ employee.createdAt ? employee.createdAt|date('d/m/Y H:i') : '' }}</td>
    </tr>
    <tr>
        <th>Mis à jour le</th>
        <td>{{ employee.updatedAt ? employee.updatedAt|date('d/m/Y H:i') : 'Jamais' }}</td>
    </tr>
</table>

<a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-primary">Modifier</a>
<a href="{{ path('app_employee_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
