 <form method="post" action="{{ path('app_restaurant_delete', {'id': restaurant.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce restaurant ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ restaurant.id) }}">
    <button class="btn btn-danger" type="submit">
        <i class="fas fa-trash-alt me-1"></i> Supprimer
    </button>
</form>
